{
  "manifest_version": 3,
  "name": "Job Tracker",
  "version": "1.0",
  "description": "Manage and track your job applications hassle free",
  "action": {
    "default_title": "Open Job Tracker",
    "default_icon": {
      "16": "favicon-16x16.png",
      "32": "favicon-32x32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "tabs", "windows"],
  "host_permissions": ["http://*/*", "https://*/*"],
  "icons": {
    "16": "favicon-16x16.png",
    "32": "favicon-32x32.png"
  }
}
